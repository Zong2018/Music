            <StackPanel Width="10" Height="6" Orientation="Horizontal" VerticalAlignment="Center">
                <Border x:Name="borderForward" Width="5" Height="4" SnapsToDevicePixels="True" Background="{TemplateBinding Background}" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="0,0,0,0"/>
